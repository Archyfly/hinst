<h2>Posts of all users </h2>
<div id="box-container" >
<% @posts.each do |post| %>
  <div id="box-container" style="width: content-box">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="/download.jpeg" alt="Card image cap">
      <h5 class="card-title">
        <div><%= link_to "#{post.title}", user_post_path(post.user_id, post.id) %></div>
        <div> by user: <%= post.user.username %></div>
      </h5>
    </div>
    <div>
      <p class="card-text"><%= truncate(post.body, :length => 30) %></p>
  </div>
  </div>
  <% end %>
</div>

